#include <stdio.h>
int main(){
    FILE *f1=fopen("a.txt","r"), *f2=fopen("b.txt","r"); int c1,c2; int pos=0;
    if(!f1||!f2){ perror("open"); return 1; }
    while((c1=fgetc(f1))!=EOF && (c2=fgetc(f2))!=EOF){ pos++; if(c1!=c2){ printf("Mismatch at %d\n", pos); break; } }
    if(feof(f1) && feof(f2)) puts("Files identical");
    fclose(f1); fclose(f2); return 0;
}
